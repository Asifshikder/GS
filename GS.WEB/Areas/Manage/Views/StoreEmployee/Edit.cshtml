@model GS.WEB.Areas.Manage.Models.Shop.StoreEmployeeVM
@{
    ViewData["Title"] = "Edit";
}


@Html.AntiForgeryToken()
<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Update</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a>StoreEmployee</a></li>
                            <li><a href="/Manage/StoreEmployee/Index">Index</a></li>
                            <li><a>Update</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Add new StoreEmployee</strong>
                        </div>
                        <div class="card-body">
                            <form asp-area="Manage" asp-controller="StoreEmployee" asp-action="Update" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-7">
                                        @Html.HiddenFor(s => s.Id)
                                        <div class="col-md-7">
                                            <div class="form-group">
                                                <label class=" form-control-label">Name</label>
                                                <input type="text" asp-for="FullName" class="form-control" required>
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Email</label>
                                                <input type="text" asp-for="Email" class="form-control" >
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Phone</label>
                                                <input type="text" asp-for="PhoneNumber" class="form-control" >
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Designation</label>
                                                <input type="text" asp-for="Designation" class="form-control" >
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Image</label>
                                                <label class=" form-control-label">Current : @Model.EmployeeImage</label>
                                                @Html.HiddenFor(s=>s.EmployeeImage)
                                                <input type="file" asp-for="EmployeImageefile" class="form-control">
                                            </div>
                                            @Html.HiddenFor(s=>s.StoreId)
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-success">Save</button>
                                            <a href="/Manage/StoreEmployee/Index" class="btn btn-warning">Cancel</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>