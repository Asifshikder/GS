@model GS.DATA.Entities.CustomPort.SurfaceLayerPriceRole

@{
    ViewData["Title"] = "Create";
}
@Html.AntiForgeryToken()
<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Create</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a>Surface Layer Price Role</a></li>
                            <li><a href="/Manage/SurfaceLayerPriceRole/Index">Index</a></li>
                            <li><a>Create</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Add new Surface Layer Price Roles</strong>
                        </div>
                        <div class="card-body">
                            <form href="/Manage/SurfaceLayerPriceRole/Create" method="post">
                                <div class="form-group">
                                    <label class=" form-control-label">Name</label>
                                    <input type="text" asp-for="Name" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Pattern</label>
                                    @Html.DropDownListFor(s=>s.PatternPriceRoleId, (SelectList)ViewBag.patternlist, "Select Pattern", new { @class = "form-control" })

                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Price Increase</label>
                                    <input type="number" asp-for="PriceIncrease" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success">Save</button>
                                    <a href="/Manage/SurfaceLayerPriceRole/Index" class="btn btn-warning">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>