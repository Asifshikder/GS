@model GS.DATA.Entities.CMS.MainPage

@{
    ViewData["Title"] = "Delete";
}
@Html.AntiForgeryToken()
<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Delete</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a>MainPage</a></li>
                            <li><a href="/Manage/MainPage/Index">Index</a></li>
                            <li><a>Delete</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Delete MainPage</strong>
                        </div>
                        <div class="card-body">
                            <form asp-area="Manage" asp-controller="MainPage" asp-action="DeleteConfirm" method="post">

                                <div class="form-group">
                                    <label class=" form-control-label">Name</label>
                                    <input type="text" asp-for="Title" class="form-control" disabled>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Descrption</label>
                                    <input type="text" asp-for="Description" class="form-control" disabled>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Image</label>
                                    @Html.HiddenFor(s=>s.PrimaryImage)
                                    <img src="@Url.Content(Model.PrimaryImage)" height="200"/>
                                </div>
                                @Html.HiddenFor(model => model.Id)
                                <div class="form-group">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                    <a href="/Manage/MainPage/Index" class="btn btn-warning">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>