@model IEnumerable<GS.DATA.Entities.Blog.BlogPost>

@{
    ViewData["Title"] = "Index";
}

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a>Blog Post</a></li>
                            <li><a href="/Blog/BlogPost/Index">Index</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-6"><div class="text-left"><strong class="card-title">Blog Post</strong></div></div>
                                <div class="col-md-6"><div class="text-right"><a href="/Blog/BlogPost/Create" class="btn btn-outline-primary">Add New</a></div></div>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Primary Image</th>
                                        <th>Blog Category</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Title</td>
                                        <td><img src="@Url.Content(item.PrimaryImage)" height="40"/></td>
                                        <td>@item.BlogCategory</td>

                                    <td>
                                        <a href="/Blog/BlogPost/Edit?id=@item.Id" class="btn btn-success btn-sm"><i class="fa fa-edit"></i></a>
                                        <a href="/Blog/BlogPost/Details?id=@item.Id" class="btn btn-success btn-sm"><i class="fa fa-info"></i></a>
                                        <a href="/Blog/BlogPost/Delete?id=@item.Id" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>
                                    </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>