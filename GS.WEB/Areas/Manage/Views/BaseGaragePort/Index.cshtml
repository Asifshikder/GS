@model GS.DATA.Entities.CustomPort.BaseGaragePort
@{
    ViewData["Title"] = "Index";
}

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Custom Garage port</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a>Base custom garage port</a></li>
                            <li><a href="/Manage/basegarageport/Index">Index</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-6"><div class="text-left"><strong class="card-title">Base of custom garage port</strong></div></div>
                                @if (Model != null)
                                {
                                    <div class="col-md-6"><div class="text-right"><a href="/Manage/BaseGaragePort/Edit?id=@Model.Id" class="btn btn-outline-primary">Edit</a></div></div>
                                }

                            </div>
                        </div>
                        <div class="card-body">
                            @if (Model != null)
                            {
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Title</td>
                                            <td>@Model.Title</td>
                                        </tr>
                                        <tr>
                                            <td>Description</td>
                                            <td>@Html.Raw(Model.Description)</td>
                                        </tr>
                                        <tr>
                                            <td>Technical Specs</td>
                                            <td>@Html.Raw(Model.TechnicalSpecification)</td>
                                        </tr>
                                        <tr>
                                            <td>Primary Image</td>
                                            <td><img src="@Url.Content(Model.BaseImage)" height="75"/></td>
                                        </tr>
                                        <tr>
                                            <td>Gallary</td>
                                         
                                            <td><img src="@Url.Content(Model.Image1)" height="75" /><img src="@Url.Content(Model.Image2)" height="75" /></td>
                                        </tr>
                                        <tr>
                                            <td>Document files</td>
                                            <td><a href="@Url.Content(Model.DocumentFile)">@Model.DocumentFile</a><a href="@Url.Content(Model.DocumentFile1)">@Model.DocumentFile1</a></td>
                                        </tr>
                                        <tr>
                                            <td>Base Price</td>
                                            <td>@Model.BasePrice</td>
                                        </tr>
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="text-center">
                                    <p>You haven't set any base port yet.</p>
                                    <a href="/Manage/BaseGaragePort/Create" class="btn btn-outline-primary">Add new</a>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>