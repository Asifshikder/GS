@model GS.WEB.Areas.Manage.Models.CustomPortar.BaseGaragePortViewModel

@{
    ViewData["Title"] = "Update";
}
@*@Html.AntiForgeryToken()*@
<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Update</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a>Base garage door</a></li>
                            <li><a href="/Manage/BaseGaragePort/Index">Index</a></li>
                            <li><a>Update</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Base garage door</strong>
                        </div>
                        <div class="card-body">
                            <form asp-area="Manage" asp-controller="BaseGaragePort" asp-action="Update" method="post" enctype="multipart/form-data">
                                @Html.HiddenFor(s => s.Id)
                                <div class="form-group">
                                    <label class=" form-control-label">Ttile</label>
                                    <input type="text" asp-for="Title" class="form-control" required>
                                </div>

                                <div class="form-group">
                                    <label class=" form-control-label">Instructionn</label>
                                    <textarea type="text" asp-for="Instruction" class="form-control" required></textarea>
                                </div>

                                <div class="form-group">
                                    <label class=" form-control-label">Primary Image</label>
                                    @Html.HiddenFor(s=>s.BaseImage)
                                    <label class=" form-control-label">Current : @Model.BaseImage</label>
                                    <input type="file" asp-for="BaseImageFile" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    @Html.HiddenFor(s => s.Image1)

                                    <label class=" form-control-label">Image secondary</label>
                                    <label class=" form-control-label">Current : @Model.Image1</label>
                                    <input type="file" asp-for="Image1File" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    @Html.HiddenFor(s => s.Image2)

                                    <label class=" form-control-label">Image optional</label>
                                    <label class=" form-control-label">Current : @Model.Image2</label>

                                    <input type="file" asp-for="Image2File" class="form-control">
                                </div>
                                <div class="form-group">
                                    @Html.HiddenFor(s => s.DocumentFile)

                                    <label class=" form-control-label">DocumentFile</label>
                                    <label class=" form-control-label">Current : @Model.DocumentFile</label>

                                    <input type="file" asp-for="DocumentFileFile" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    @Html.HiddenFor(s => s.DocumentFile1)

                                    <label class=" form-control-label">Documents others</label>
                                    <label class=" form-control-label">Current : @Model.DocumentFile1</label>

                                    <input type="file" asp-for="DocumentFile1File" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label class=" form-control-label">Description</label>
                                    <textarea type="text" asp-for="Description" class="form-control" required></textarea>
                                </div>

                                <div class="form-group">
                                    <label class=" form-control-label">Technical Spec</label>
                                    <textarea type="text" asp-for="TechnicalSpecification" class="form-control" required></textarea>
                                </div>

                                <div class="form-group">
                                    <label class=" form-control-label">Base price</label>
                                    <input type="number" asp-for="BasePrice" class="form-control" required>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-success">Save</button>
                                    <a href="/Manage/BaseGaragePort/Index" class="btn btn-warning">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $('#Description').summernote({
            tabsize: 2,
            height: 200
        });
        $('#TechnicalSpecification').summernote({
            tabsize: 2,
            height: 500
        });
    </script>
}