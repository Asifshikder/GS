@model IEnumerable<GS.WEB.Areas.Manage.Models.Catelog.ProductViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a>Product</a></li>
                            <li><a href="/Manage/Product/Index">Index</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-6"><div class="text-left"><strong class="card-title">Product</strong></div></div>
                                <div class="col-md-6"><div class="text-right"><a href="/Manage/Product/Create" class="btn btn-outline-primary">Add New</a></div></div>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Image</th>
                                        <th>Technical specs</th>
                                        <th>Name</th>
                                        <th>Type</th>
                                        <th>Price</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td><img src="@Url.Content(item.PrimaryImage)" class="rounded-circle" height="50" /></td>
                                            <td><a href="/Manage/TechnicalSpecs/Index?id=@item.Id" class="btn btn-success btn-sm">View all</a></td>
                                            <td>@item.Title</td>
                                            <td>@item.CategoryName</td>
                                            <td>@item.Price</td>
                                            <td>
                                                <a href="/Manage/Product/Edit?id=@item.Id" class="btn btn-success btn-sm"><i class="fa fa-edit"></i></a>
                                                <a href="/Manage/Product/Delete?id=@item.Id" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>